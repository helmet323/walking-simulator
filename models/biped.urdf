<?xml version="1.0"?>
<robot name="stable_biped">

  <!-- ================= TORSO ================= -->
  <link name="torso">
    <visual>
      <geometry><box size="0.25 0.14 0.45"/></geometry>
    </visual>
    <collision>
      <geometry><box size="0.25 0.14 0.45"/></geometry>
    </collision>
    <inertial>
      <mass value="12"/>
      <inertia ixx="0.35" iyy="0.35" izz="0.15"/>
    </inertial>
  </link>

  <!-- ================= LEFT LEG ================= -->
  <link name="left_thigh">
    <visual><geometry><capsule radius="0.045" length="0.32"/></geometry></visual>
    <collision><geometry><capsule radius="0.045" length="0.32"/></geometry></collision>
    <inertial>
      <mass value="3.5"/>
      <inertia ixx="0.08" iyy="0.08" izz="0.03"/>
    </inertial>
  </link>

  <link name="left_shin">
    <visual><geometry><capsule radius="0.04" length="0.32"/></geometry></visual>
    <collision><geometry><capsule radius="0.04" length="0.32"/></geometry></collision>
    <inertial>
      <mass value="2.8"/>
      <inertia ixx="0.06" iyy="0.06" izz="0.025"/>
    </inertial>
  </link>

  <link name="left_foot">
    <visual>
      <geometry><box size="0.26 0.12 0.05"/></geometry>
    </visual>
    <collision>
      <geometry><box size="0.26 0.12 0.05"/></geometry>
    </collision>
    <inertial>
      <mass value="2.0"/>
      <inertia ixx="0.03" iyy="0.02" izz="0.01"/>
    </inertial>
  </link>

  <!-- ================= RIGHT LEG ================= -->
  <link name="right_thigh">
    <visual><geometry><capsule radius="0.045" length="0.32"/></geometry></visual>
    <collision><geometry><capsule radius="0.045" length="0.32"/></geometry></collision>
    <inertial>
      <mass value="3.5"/>
      <inertia ixx="0.08" iyy="0.08" izz="0.03"/>
    </inertial>
  </link>

  <link name="right_shin">
    <visual><geometry><capsule radius="0.04" length="0.32"/></geometry></visual>
    <collision><geometry><capsule radius="0.04" length="0.32"/></geometry></collision>
    <inertial>
      <mass value="2.8"/>
      <inertia ixx="0.06" iyy="0.06" izz="0.025"/>
    </inertial>
  </link>

  <link name="right_foot">
    <visual>
      <geometry><box size="0.26 0.12 0.05"/></geometry>
    </visual>
    <collision>
      <geometry><box size="0.26 0.12 0.05"/></geometry>
    </collision>
    <inertial>
      <mass value="2.0"/>
      <inertia ixx="0.03" iyy="0.02" izz="0.01"/>
    </inertial>
  </link>

  <!-- ================= JOINTS ================= -->

  <!-- Left -->
  <joint name="left_hip" type="revolute">
    <parent link="torso"/>
    <child link="left_thigh"/>
    <origin xyz="0 0.11 -0.25"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.2" upper="1.2" effort="180"/>
    <dynamics damping="1.5" friction="0.2"/>
  </joint>

  <joint name="left_knee" type="revolute">
    <parent link="left_thigh"/>
    <child link="left_shin"/>
    <origin xyz="0 0 -0.32"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.0" upper="-0.05"/>
    <dynamics damping="2.0" friction="0.3"/>
  </joint>

  <joint name="left_ankle" type="revolute">
    <parent link="left_shin"/>
    <child link="left_foot"/>
    <origin xyz="0 0 -0.32"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.45" upper="0.45"/>
    <dynamics damping="2.5" friction="0.4"/>
  </joint>

  <!-- Right -->
  <joint name="right_hip" type="revolute">
    <parent link="torso"/>
    <child link="right_thigh"/>
    <origin xyz="0 -0.11 -0.25"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.2" upper="1.2" effort="180"/>
    <dynamics damping="1.5" friction="0.2"/>
  </joint>

  <joint name="right_knee" type="revolute">
    <parent link="right_thigh"/>
    <child link="right_shin"/>
    <origin xyz="0 0 -0.32"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.0" upper="-0.05"/>
    <dynamics damping="2.0" friction="0.3"/>
  </joint>

  <joint name="right_ankle" type="revolute">
    <parent link="right_shin"/>
    <child link="right_foot"/>
    <origin xyz="0 0 -0.32"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.45" upper="0.45"/>
    <dynamics damping="2.5" friction="0.4"/>
  </joint>

</robot>
